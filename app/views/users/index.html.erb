<div class="container">
  <div class="row center">
    <h1 class='center-horizontal blue orange-text'>Movie Searcher Users:</h1>
  </div>
  <hr/>
  <div class="center-horizontal">
  <% if @users.any? %>
    <% @users.each do |user| %>
      <ul>
        <h3 class='brown darken-1 pink-text text-lighten-2'><%= user.name %></h3>
        <%= link_to "#{user.name}'s movies", user_path(user) %> |
        <%= link_to 'Edit User', edit_user_path(user) %> |
        <%= link_to 'Destroy user', user_path(user), method: :delete %>
      </ul>
    <% end %>
  <% else %>
  <h3> No users found </h3>
  <% end %>
</div>
  <p><%= link_to 'New User', new_user_path %></p>
</div>
